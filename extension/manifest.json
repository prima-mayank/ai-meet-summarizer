{
  "manifest_version": 3,
  "name": "AI Meeting Summarizer",
  "version": "1.0",
  "description": "Captures captions from Google Meet",
  "permissions": ["activeTab", "scripting"],
  "host_permissions": [
    "<all_urls>",
    "http://localhost:3001/*",
    "ws://localhost:3001/*"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "socket.io.min.js",
        "config.js",
        "ai-summarizer.ui.js",
        "ai-summarizer.captions.js",
        "ai-summarizer.socket.js",
        "content.js"
      ]
    }
  ]
}
