{
  "manifest_version": 3,
  "name": "AI Meeting Summarizer",
  "version": "1.0",
  "description": "Captures captions from Google Meet",
  "permissions": ["activeTab", "scripting"],
  "host_permissions": [
    "https://meet.google.com/*",
    "http://localhost:3001/*",
    "ws://localhost:3001/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://meet.google.com/*"],
      "js": ["socket.io.min.js", "content.js"]
    }
  ]
}
